@model rocket_elevator_ui.Models.InterventionModel
<div class="form-group">
    @Html.LabelFor(model => model.BatteryId, "Batteries", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.BatteryId, Model.Batteries, "-- Select Batterie --", htmlAttributes: new { @class = "form-control", @onchange = "showColumns(this.value)" })
        @Html.ValidationMessageFor(model => model.BatteryId, "", new { @class = "text-danger" })
    </div>
</div>
